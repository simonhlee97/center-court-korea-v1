<div class='container proshop-details'>

  <div class="profile-card">
    <div class="hero">
      <h2 class='text-c'><%= @proshop.name %></h2>
    </div>
    <div class="info">
      <span class='text-c'><%= @proshop.city %></span>
      <span class='text-c'><%= @proshop.address %></span>
      <span class='text-c'><%= @proshop.phone %></span>
    </div>
    <div class="map">
      <h2 class='text-c'><%= @proshop.address %></h2>
    </div>
  </div>

</div>

