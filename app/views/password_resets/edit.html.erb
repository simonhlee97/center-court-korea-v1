<div class="container">
  <h1>Reset your password</h1>

  <%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
<div class="form-container">
      <div class="contact-box">
      
  <% if form.object.errors.any? %>
    <div class="alert">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-field">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'field' %>
  </div>

  <div class="form-field">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class: 'field' %>
  </div>

  <%= form.submit "Reset Password", class: "btn-blue" %>


</div>
</div>

<% end %>


</div>